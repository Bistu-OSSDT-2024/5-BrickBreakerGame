package tour1;
import javax.swing.*;
import java.awt.*;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;
import javax.imageio.ImageIO;
import java.awt.FlowLayout;
import java.awt.event.*;
import java.util.Random;
public class tour extends JFrame
{
	    private JButton button;
	    private JLabel label;
	    private String[] cities = {"北京", "上海", "广州", "深圳", "成都"};

	    public tour() {
	        // 设置窗口标题和大小
	        setTitle("城市抽签程序");
	        setSize(300, 200);
	        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
	        setLayout(new FlowLayout());

	        // 创建按钮和标签
	        button = new JButton("抽取城市");
	        label = new JLabel("点击按钮抽取一个城市");
	        add(button);
	        add(label);

	        // 为按钮添加事件监听器
	        button.addActionListener(new ActionListener() {
	            public void actionPerformed(ActionEvent e) {
	                Random random = new Random();
	                int index = random.nextInt(cities.length);
	                label.setText("抽取的城市是: " + cities[index]);
	            }
	        });
	    }

	    public static void main(String[] args) {
	        SwingUtilities.invokeLater(new Runnable() {
	            public void run() {
	                new tour().setVisible(true);
	            }
	        });
	    }
	}
public class ImageDisplay {
    public static void main(String[] args) {
        SwingUtilities.invokeLater(new Runnable() {
            public void run() {
                createAndShowGUI();
            }
        });
    }

    private static void createAndShowGUI() {
        JFrame frame = new JFrame("Image Display");
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        
        JLabel label = new JLabel();
        BufferedImage image = loadImage("微信图片_20240507170102.jpg");
        ImageIcon icon = new ImageIcon(image);
        label.setIcon(icon);

        frame.getContentPane().add(label, BorderLayout.CENTER);
        frame.pack();
        frame.setVisible(true);
    }

    private static BufferedImage loadImage(String path) {
        try {
            return ImageIO.read(new File(path));
        } catch (IOException e) {
            e.printStackTrace();
            return null;
        }
    }
}
